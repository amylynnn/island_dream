<div class="main-container p-4" >
  <div class="card mx-auto bg-light" style="width: 50rem;">
    <div class="card-header text-center">
      <h4 class="card-title">Your trip :</h4>
        <%= simple_form_for [@island, @booking], data: { controller: 'flatpickr' } do |f| %>
  <%= f.input :start_dates, as: :string, input_html: { data: { flatpickr_target: "startTime" } } %>
  <%= f.input :end_dates, as: :string, input_html: { data: { flatpickr_target: "endTime" } } %>
        <div class="form-group">
    <label for="exampleFormControlSelect1">Guests</label>
    <select class="form-control" id="exampleFormControlSelect1">
      <option>1 guest</option>
      <option>2 guests</option>
      <option>3 guests</option>
      <option>4 guests</option>
      <option>5 guests</option>
      <option>6 guests</option>
      <option>7 guests</option>
      <option>8 guests</option>
      <option>9 guests</option>
      <option>10 guests</option>
        <br>
    </select>
  </div>
  <div class="form-group">
        <br>
        <%= f.submit class: "btn btn-secondary" %>
        <% end %>
    </div>
  </div>
</div>
