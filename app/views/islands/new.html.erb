 <div class="main-container">
    <div class="row">
      <div class="col-6 m-auto">
        <div class="-form ">
          <div class="mt-3 ">
            <h1>Add a new Island üèùÔ∏è</h1>
            <%= simple_form_for(@island) do |f| %>

              <div class="form-group">
                <%= f.label :name, label: "Enter your Island name:" %>
                <%= f.text_field :name, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :location, label: "Enter the location:" %>
                <%= f.text_field :location, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :price, label: "Enter the price per night: $" %>
                <%= f.text_field :price, class: 'form-control' %>
              </div>
                <br>
                <div class="form-group">
                  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
                </div>
              <div class="mt-3">
                <%= f.submit class: 'btn btn-secondary' %>
                <%= link_to 'Cancel', root_path(anchor: "recommandations"), class: 'btn btn-dark ml-2' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= link_to islands_path do %>
    <i class="fa-solid fa-arrow-rotate-left"></i> Back to list
  <% end %>
</div>
